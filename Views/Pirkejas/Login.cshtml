@model AutoNuoma.Models.Naudotojas

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Login
            </div>
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <div class="card-body">
                @using (Html.BeginForm("Login", "Pirkejas", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.prisijungimo_vardas)
                        @Html.TextBoxFor(m => m.prisijungimo_vardas,  new { @class = "form-control", @placeholder = "" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.slaptazodis)
                        @Html.PasswordFor(m => m.slaptazodis, new { @class = "form-control", @placeholder = "" })
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Prisijungti" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Atgal į sąrašą »", "Meniu", "Pirkejas", new { @class = "btn btn-default" })
</div>