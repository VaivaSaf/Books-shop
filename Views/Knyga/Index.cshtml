@model IEnumerable<AutoNuoma.ViewModels.KnygaViewModel>

@{
    ViewBag.Title = "Knygos";
}




<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Knygų pardavimo IS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @* Navigacijos meniu *@
                <li>@Html.ActionLink("Peržiūrėti prekių užsakymus", "Index", "Nauju_knygu_uzsakymasPardavejas")</li>
                <li>@Html.ActionLink("Peržiūrėti knygų sąrašą", "Index", "Knyga")</li>
                <li>@Html.ActionLink("Peržiūrėti gautų užsakytų knygų sąrašą", "Index", "Parduotaknyga")</li>

            </ul>
        </div>
    </div>
</div>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<script src="~/Scripts/jquery.datetimepicker.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<h2>Knygos</h2>
<p>
    @Html.ActionLink("Nauja knyga", "Create", "Knyga", new { @class = "btn btn-success" })
</p>
<table class="table table-striped datatable">
    <thead>

        <tr style="background-color: lightblue">
            <th>
                @Html.DisplayNameFor(model => model.pavadinimas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.autorius)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kaina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isleidimo_metai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.puslapiu_skaicius)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.leidykla)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kiekis)
            </th>


            <th style="width: 18%"></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.pavadinimas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.autorius)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.kaina)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISBN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isleidimo_metai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.puslapiu_skaicius)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.leidykla)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.kiekis)
                </td>


                <td>
                    @Html.ActionLink("Redaguoti", "Edit", new { id = item.ISBN }, new { @class = "btn btn-primary action" })
                    @Html.ActionLink("Šalinti", "Delete", new { id = item.ISBN }, new { @class = "btn btn-danger action" })
                </td>
            </tr>
        }
        <div>
            @Html.ActionLink("Atgal", "Meniu", "Pardavejas", null, new { @class = "btn btn-default" })
        </div>

    </tbody>

</table>
